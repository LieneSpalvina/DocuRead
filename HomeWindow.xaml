<Window
    x:Class="DocumentReaderApp.Views.HomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Home"
    Width="1024"
    Height="768"
    MinWidth="800"
    MinHeight="600"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Language selection  -->
        <ComboBox
            Grid.Row="0"
            Width="200"
            Height="30"
            Margin="0,10,0,10"
            HorizontalAlignment="Center"
            ItemsSource="{Binding AvailableLanguages}"
            SelectedItem="{Binding SelectedLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Browse File Button  -->
        <Button
            Grid.Row="1"
            Width="200"
            Height="30"
            Margin="0,10,0,10"
            HorizontalAlignment="Center"
            Command="{Binding BrowseFileCommand}"
            Content="Browse File" />

        <!--  Selected File Path Text  -->
        <TextBlock
            Grid.Row="2"
            Width="400"
            Margin="0,10,0,10"
            HorizontalAlignment="Center"
            Text="{Binding SelectedFilePath, Mode=OneWay}"
            TextWrapping="Wrap" />

        <!--  Extract Text Button  -->
        <Button
            Grid.Row="3"
            Width="200"
            Height="30"
            Margin="0,10,0,10"
            HorizontalAlignment="Center"
            Command="{Binding ExtractTextCommand}"
            Content="Extract Text" />

        <!--  Extracted Text Display  -->
        <TextBox
            Grid.Row="4"
            Width="600"
            Height="300"
            Margin="0,10,0,10"
            HorizontalAlignment="Center"
            AcceptsReturn="True"
            Text="{Binding ExtractedText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto" />

        <!--  Bottom buttons in a row  -->
        <StackPanel
            Grid.Row="5"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <!--  Save Text Button  -->
            <Button
                Width="150"
                Height="30"
                Margin="5"
                Command="{Binding SaveTextCommand}"
                Content="Save Text" />

            <!--  Documents Button  -->
            <Button
                Width="150"
                Height="30"
                Margin="5"
                Click="OpenDocuments_Click"
                Content="Documents" />

            <!--  Logout Button  -->
            <Button
                Width="100"
                Height="30"
                Margin="5"
                Command="{Binding SignOutCommand}"
                Content="Log Out" />
        </StackPanel>

    </Grid>
</Window>
